<%= form_for @book, :html => {:multipart => true} do |f| %>
  

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :image_link %><br />
    <%= f.text_field :image_link %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :published_at %><br />
    <%= f.datetime_select :published_at %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :comments_count %><br />
    <%= f.text_field :comments_count %>
  </div>
  <div class="field">
    <%= f.label :legacy %><br />
    <%= f.check_box :legacy %>
  </div>
  <div class="field">
  	<%= f.file_field :image%>
  </div>
  </div><div class="field">
  	<%= f.file_field :audio%>
  </div>
  
  <div> 
  	<%= f.label :remote_audio_url ,"OR Audio URL"%></br>
  	<%= f.text_field :remote_audio_url%></br>
  	</div>
  	
  <div class="field">
    <%= f.label :file_sizes %><br />
    <%= f.text_area :file_sizes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
