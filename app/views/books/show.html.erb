<% title @book.full_name, false %>
<h1><%#=  @book.name %></h1> 


<div id="episode" class="<%= "legacy" if @book.legacy? %>">
  <% if params[:autoplay] %>
    <div id="video_wrapper"><%= book_video_tag @book %></div>
  <% else %>
    <script type="text/html" id="video_template">
      <%= book_video_tag @book %>
      
      <%= player(:allowfullscreen => 'true',:allowscriptaccess => 'true')%>
  
  
  <embed src='<%= @book.audio_url%>' height='300' width='400' bgcolor='0xffffff' allowscriptaccess='always' allowfullscreen='true' flashvars="&author=Bagwan%20Pankaj&autostart=f&backcolor=0xffffff&description=JW%20Flash%20Player%20Helper.This%20is%20a%20demo%20video%3B%20came%20bundled%20with%20JW%20Flash%20Player%20Setup&file=http%3A%2F%2Flocalhost%3A3000%2Fothers%2Fvideo.flv&plugins=viral-2d&title=Demo%20of%20flash_player_helper%20Plugin"/>
  
  
      
    </script>
  <% end %> 
 <div class="info<%= " video_info" if params[:autoplay] %>">
 	<div class="screenshot"><%= image_tag @book.image_url ,:size => "200x150"%></div>

	<!-- <video width="200" height="40" controls="controls">
		<source src=<%=  @book.audio_url%> type="audio/mp3" />
	  	<source src=<%=  @book.audio_url%> type="audio/mp4" />
	 	 <source src=<%=  @book.audio_url%> type="audio/ogg" />
	  	<source src=<%=  @book.audio_url%> type="audio/webm" />
	<object data=<%=  @book.audio_url%> width="320" height="240"> 
	<embed src=<%=  @book.audio_url%> width="320" height="240">
