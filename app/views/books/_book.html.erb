<div class="book">
 <div class="screenshot"><%#= link_to image_tag("#{book.name.downcase}.png", :size => "200x125", :alt => book.name), {:autoplay => true}, :class => "play_video" %></div>
  <div class="main">
    <div class="info">
      <span class="number">Book <%= book.position %></span> &ndash;
      <span class="published_at"><%#= book.published_at.strftime('%b %d, %Y') %></span>
      <%# unless book.published? %>
        <span class="unreleased">NOT YET RELEASED</span>
      <%# end %>
    </div>
    <h2><%= link_to book.name, book %></h2>
    <div class="description"><%= book.description %></div>
    <div class="watch">
      <%= link_to "Read Book", book_path(book, :autoplay => true), :class => "read_button" %>
      <span class="stats">(<%#= pluralize (book.seconds/60).round, "minute" %>, <%#= link_to pluralize(book.comments.size, "comment"), book_path(episode, :view => "comments") %>)</span>
    </div>
  </div>
  <div class="clear"></div>	
</div>

