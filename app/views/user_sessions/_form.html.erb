<%title "Login"%>

<%= form_for @user_session, :as => :user_session, :url => {:action => "create"} do |f|%>

   <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
