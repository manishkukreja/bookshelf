<h1>Listing comments</h1>

<table>
  <tr>
    <th>Book</th>
    <th>Content</th>
    <th>F name</th>
    <th>L name</th>
    <th>Email</th>
    <th>User</th>
    <th>Referrer</th>
    <th>User ip</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.book_id %></td>
    <td><%= comment.content %></td>
    <td><%= comment.f_name %></td>
    <td><%= comment.l_name %></td>
    <td><%= comment.email %></td>
    <td><%= comment.user_id %></td>
    <td><%= comment.referrer %></td>
    <td><%= comment.user_ip %></td>
    <td><%= comment.position %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

